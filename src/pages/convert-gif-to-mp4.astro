import MarketingLayout from '../layouts/MarketingLayout.astro';

// ÈáùÂ∞ç "GIF to MP4" ÁöÑÁâπËâ≤‰ªãÁ¥π
const features = [
  {
    title: "Instagram Ready",
    desc: "Instagram and TikTok do not support GIF files. Convert your animated GIFs to MP4 video to share them on social media instantly.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-cyan-400"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>`
  },
  {
    title: "Reduce File Size",
    desc: "GIF files are notoriously huge. Converting them to MP4 can reduce file size by up to 80% while maintaining high quality.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>`
  },
  {
    title: "Add Background Music",
    desc: "GIFs have no sound. Once converted to MP4, you can use our editor to add background music or voiceovers to your animation.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>`
  }
];

// üî• SEO ÂÑ™ÂåñÔºöÈáùÂ∞ç "GIF to MP4" Âíå "Share to Instagram"
const pageTitle = "Convert GIF to MP4 Online - Free & No Upload | FastVideoCutter";
const pageDescription = "Turn animated GIFs into MP4 videos instantly in your browser. Perfect for sharing GIFs on Instagram and TikTok. No file upload required. 100% Private.";

---

<MarketingLayout
  title={pageTitle}
  description={pageDescription} 
  heroBadge="GIF Converter"
  heroTitle='Convert GIF to Video <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600">Instantly</span>'
  heroSubtitle="The easiest way to turn GIFs into shareable MP4 videos. Perfect for Instagram, TikTok, and YouTube. No upload needed."
  features={features}
>

  <!-- SEO ÂÖßÂÆπÂçÄ -->
  <div class="space-y-12">
    
    <!-- Introduction -->
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-white mb-4">Make GIFs Shareable Everywhere</h2>
      <p class="text-gray-400 leading-relaxed">
        Trying to post a funny GIF to <strong>Instagram</strong> or <strong>TikTok</strong>, but it won't let you? 
        That's because these platforms require video files (MP4), not images. 
        <strong>FastVideoCutter</strong> allows you to convert GIF to MP4 directly in your browser, so you can share your favorite memes instantly.
      </p>
    </div>

    <!-- How-to Guide -->
    <section class="space-y-6">
        <h2 class="text-2xl font-bold text-white">How to turn a GIF into a video?</h2>
        <ol class="space-y-4">
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 bg-slate-800 rounded-full flex items-center justify-center text-cyan-400 font-bold border border-slate-700">1</span>
                <p class="pt-1 text-slate-300">Click <strong>"Start Editing"</strong> to launch the tool.</p>
            </li>
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 bg-slate-800 rounded-full flex items-center justify-center text-cyan-400 font-bold border border-slate-700">2</span>
                <p class="pt-1 text-slate-300">Drag your <strong>.gif</strong> file into the upload area. It will be treated as a video clip.</p>
            </li>
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 bg-slate-800 rounded-full flex items-center justify-center text-cyan-400 font-bold border border-slate-700">3</span>
                <p class="pt-1 text-slate-300">
                    (Optional) Drag the clip multiple times to the timeline to loop it, or add audio.
                </p>
            </li>
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 bg-slate-800 rounded-full flex items-center justify-center text-cyan-400 font-bold border border-slate-700">4</span>
                <p class="pt-1 text-slate-300">Click <strong>Export</strong>. Your GIF is now a high-quality <strong>.mp4</strong> video.</p>
            </li>
        </ol>
    </section>

    <!-- Comparison / Benefits -->
    <div class="grid md:grid-cols-2 gap-8 mt-12">
        <div class="bg-blue-900/10 border border-blue-800/50 rounded-xl p-6">
            <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
                Why convert GIF to MP4?
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
                GIF is an old image format that is inefficient and lacks pause/play controls. MP4 is a modern video format that is smaller, higher quality, and compatible with all social platforms.
            </p>
        </div>
        <div class="bg-purple-900/10 border border-purple-800/50 rounded-xl p-6">
            <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                Secure & Private
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
                Don't upload your personal GIFs to random servers. Our tool runs locally in your browser, keeping your files safe on your computer.
            </p>
        </div>
    </div>

  </div>

</MarketingLayout>